<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz4">

    <TextView
        android:id="@+id/quiz_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/quiz4_title"
        android:autoSizeTextType="uniform"
        android:textColor="@color/black"
        app:layout_constraintWidth_default= "percent"
        app:layout_constraintWidth_percent= ".95"
        app:layout_constraintHeight_default= "percent"
        app:layout_constraintHeight_percent= ".2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/option41"/>

    <!-- before width size = 160 -->
    <Button
        android:id="@+id/option41"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/button_square_cornercercle"
        app:layout_constraintWidth_default= "percent"
        app:layout_constraintWidth_percent= ".25"
        app:layout_constraintHeight_default= "percent"
        app:layout_constraintHeight_percent= ".25"
        app:layout_constraintTop_toBottomOf="@id/quiz_title"
        app:layout_constraintBottom_toTopOf="@id/option43"
        app:layout_constraintEnd_toStartOf="@id/option42"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/option42"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/button_square_cornercercle"
        app:layout_constraintWidth_default= "percent"
        app:layout_constraintWidth_percent= ".25"
        app:layout_constraintHeight_default= "percent"
        app:layout_constraintHeight_percent= ".25"
        app:layout_constraintTop_toBottomOf="@id/quiz_title"
        app:layout_constraintBottom_toTopOf="@id/option44"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/option41"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/option43"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/button_square_cornercercle"
        app:layout_constraintWidth_default= "percent"
        app:layout_constraintWidth_percent= ".25"
        app:layout_constraintHeight_default= "percent"
        app:layout_constraintHeight_percent= ".25"
        app:layout_constraintTop_toBottomOf="@id/option41"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/option44"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/option44"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/button_square_cornercercle"
        app:layout_constraintWidth_default= "percent"
        app:layout_constraintWidth_percent= ".25"
        app:layout_constraintHeight_default= "percent"
        app:layout_constraintHeight_percent= ".25"
        app:layout_constraintTop_toBottomOf="@id/option42"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/option43"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>