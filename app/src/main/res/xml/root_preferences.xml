<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/select_option_header">

        <!-- defaultValueは、 entryValuesで設定した値に対応する-->
        <ListPreference
            app:defaultValue="3"
            app:entries="@array/quiz_choices"
            app:entryValues="@array/quiz_choices_number"
            app:key="choices"
            app:title="@string/choices_title"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>